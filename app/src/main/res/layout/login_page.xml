<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/login_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#6288C4"
    android:padding="35dp"
    android:clickable="true">

    <WebView
        android:id="@+id/web_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/umobile_header_transparent"
        android:contentDescription="@string/umobile_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/login_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#6288C4"
        android:layout_below="@+id/imageView"
        android:clickable="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/login_username"
            android:hint="@string/username"
            android:textColor="#FFFFFF"
            android:textColorHint="#C0CFE7"
            android:layout_above="@+id/login_password"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:background="#00000000"
            android:padding="10dp"
            android:layout_alignParentRight="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_password"
            android:hint="@string/password"
            android:textColor="#FFFFFF"
            android:textColorHint="#C0CFE7"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:background="#00000000"
            android:padding="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/login"
            android:id="@+id/login_button"
            android:textColor="#FFFFFF"
            android:clickable="true"
            android:background="@drawable/custom_button"
            android:layout_margin="10dp"
            android:layout_below="@+id/login_password"
            android:layout_centerHorizontal="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remember_me"
            android:id="@+id/checkBox"
            android:checked="true"
            android:textColor="#C0CFE7"
            android:clickable="true"
            android:layout_below="@+id/login_button"
            android:layout_alignRight="@+id/login_button" />
    </RelativeLayout>

</RelativeLayout>